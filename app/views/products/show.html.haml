#product_show.col-md-12
	%h1= product.title
	.product_image.col-md-6
		%img.img-responsive{src: "http://placehold.it/650x500", alt: "Product Image"}
	.col-md-6
		.product_description
			= simple_format(product.description)
		.product_price
			%p
				Price
				= number_to_currency(product.price, unit: "$")
		.product_rating
			%p
				Average rating
				= product.average_rating.to_i
				based on
				= pluralize(product.reviews.size, "Review")
			- if is_admin?
				= link_to 'Edit', edit_category_product_path(category.id, product.id)

#reviews.col-md-12
	.col-md-6
		%h3.review_count= pluralize(product.reviews.size, "Review")
		.reviews
			= render reviews
	.col-md-6
		- if user_signed_in?
			%h3 New Review
			= render 'reviews/form'

