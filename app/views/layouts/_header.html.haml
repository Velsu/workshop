%nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %span.navbar-brand 
        = link_to "#{AppConfig.workshops_name}", root_path
    .navbar-collapse.collapse
      %p.navbar-text.navbar-right
        - if user_signed_in?
          = link_to "Log Out", destroy_user_session_path, method: :delete, class: "navbar-text navbar-right navbar-link"
          = link_to "Account settings", edit_user_registration_path, class: "navbar-text navbar-right navbar-link"
        - else
          = link_to "Sign up", new_user_registration_path, class: "navbar-text navbar-right navbar-link"
          = link_to "Sign in", new_user_session_path, class: "navbar-text navbar-right navbar-link"
        = link_to "Home", root_url, class: "navbar-text navbar-right"