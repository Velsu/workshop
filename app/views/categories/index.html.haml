.container
  .col-md-12
    .col-md-6.col-md-offset-3
      .jumbotron.center 
        %p.title Categories
        %p.content Browse our categories to find what You need
  #categories.col-md-12
    - categories.each do |category|
      .col-md-4
        = link_to category do
          %p.category-item.center= category.name

        %span.category-links
          - if is_admin?
            = link_to "Edit", edit_category_path(category)
            = link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }

            = link_to "New Category", new_category_path